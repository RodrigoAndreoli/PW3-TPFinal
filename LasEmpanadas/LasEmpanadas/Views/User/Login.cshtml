
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/AnonimoLayout.cshtml";
}

<div class="main-container uk-flex uk-flex-center uk-flex-middle uk-height-viewport" uk-height-viewport="offset-top: true">
    <div class="uk-card-default uk-card-hover uk-card-body">
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            <fieldset class="uk-fieldset">
                <legend class="uk-legend">Inicia sesion:</legend>
                <div class="uk-margin">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: user"></span>
                        <input name="email" class="uk-input uk-form-large" required placeholder="Email" type="text">
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon uk-form-icon-flip" data-uk-icon="icon: lock"></span>
                        <input name="password" class="uk-input uk-form-large" required placeholder="Contraseña" type="password">
                    </div>
                </div>
                <div class="uk-margin">
                    <button type="submit" class="uk-button uk-button-primary uk-button-primary uk-button-large uk-width-1-1">LOG IN</button>
                </div>
            </fieldset>
        }
    </div>
</div>

