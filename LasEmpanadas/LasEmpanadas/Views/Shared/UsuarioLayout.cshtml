    Layout = "~/Views/Shared/BaseLayout.cshtml";
    string userLogged = Session["emailUser"].ToString();
    int idUser = Convert.ToInt32(Session["idUser"]);
}

@section css{
    @RenderSection("css",false)
}

@section meta{
    @RenderSection("meta",false)
}

@section js{
    @RenderSection("js",false)
}

@section nav{
<nav class="uk-navbar uk-background-default" uk-sticky="bottom: #offset" uk-navbar="">
    <div class="uk-navbar-left">
        <ul class="uk-navbar-nav">
            <li class="uk-active">
                <a href="/"><img class="logo" src="~/Content/images/logo.png" /></a>
            </li>
            <li>
                <a href="/Pedido/Iniciar">Encarga tus empanadas</a>
            </li>
            <li>
